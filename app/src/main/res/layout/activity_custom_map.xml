<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"></ImageView>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:layout_above="@id/options"
        android:paddingTop="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo2"></ImageView>

    <TextView
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE YOUR LEVEL"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginBottom="20dp">
    </TextView>

    <TextView
        android:id="@+id/opt_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Background"
        android:layout_centerInParent="true"
        android:layout_below="@id/options"
        android:textColor="#FFFFFF"
        android:textSize="20sp">
    </TextView>

    <Button
        android:id="@+id/bg_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK"
        android:layout_below="@id/opt_bg"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/bg_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREY"
        android:layout_toRightOf="@+id/bg_black"
        android:layout_centerInParent="true"
        android:layout_below="@id/opt_bg"/>

    <Button
        android:id="@+id/bg_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PURPLE"
        android:layout_toLeftOf="@+id/bg_black"
        android:layout_centerInParent="true"
        android:layout_below="@id/opt_bg"/>

    <TextView
        android:id="@+id/p_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bg_black"
        android:layout_centerInParent="true"
        android:text="Select Player Color"
        android:textColor="#ffffff"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/player_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUE"
        android:layout_below="@id/p_color"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/p_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED"
        android:layout_below="@id/p_color"
        android:layout_toLeftOf="@id/player_blue"></Button>
    <Button
        android:id="@+id/p_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORANGE"
        android:layout_below="@id/p_color"
        android:layout_toRightOf="@id/player_blue"></Button>

    <TextView
        android:id="@+id/opt_enemy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Select Enemy"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@id/player_blue"></TextView>

    <Button
        android:id="@+id/enemy_ufo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_enemy"
        android:text="UFO"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/enemy_drone"
        android:layout_below="@id/opt_enemy"
        android:text="DRONE"
        android:layout_toLeftOf="@id/enemy_ufo"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/opt_enemy"
        android:id="@+id/enemy_asteroid"
        android:text="ASTEROID"
        android:layout_toRightOf="@id/enemy_ufo"></Button>


    <ImageView
        android:id="@+id/arrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back_white_24dp">
    </ImageView>

</RelativeLayout>