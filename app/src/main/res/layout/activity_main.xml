<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"></ImageView>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:layout_above="@id/play"
        android:paddingTop="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo2"></ImageView>

    <Button
        android:id="@+id/play"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/scores"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:layout_below="@id/play"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/custom"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="CUSTOM MAP"
        android:layout_below="@id/scores"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/aboutbtn"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:layout_below="@id/custom"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/tutorial"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="TUTORIAL"
        android:layout_below="@id/aboutbtn"
        android:layout_centerInParent="true">
    </Button>
    <Button
        android:id="@+id/exit"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:layout_below="@id/tutorial"
        android:layout_centerInParent="true">
    </Button>

    <ImageView
        android:id="@+id/VolCtrl"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_volume_up_white_24dp">
    </ImageView>

</RelativeLayout>