<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"></ImageView>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:layout_above="@id/options"
        android:paddingTop="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo2"></ImageView>

    <TextView
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL SELECT"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:layout_marginBottom="20dp">
    </TextView>

    <Button
        android:id="@+id/lvl1"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="EASY"
        android:layout_below="@id/options"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/lvl2"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="MEDIUM"
        android:layout_below="@id/lvl1"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/lvl3"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="HARD"
        android:layout_below="@id/lvl2"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/custom"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:text="CUSTOM"
        android:layout_below="@id/lvl3"
        android:layout_centerInParent="true">
    </Button>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back_white_24dp">
    </ImageView>

</RelativeLayout>