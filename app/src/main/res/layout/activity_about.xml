<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"></ImageView>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:layout_above="@id/abouthead"
        android:paddingTop="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo2"></ImageView>
    <TextView
        android:id="@+id/gamename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text=""
        android:layout_margin="80dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true">
    </TextView>

    <TextView
        android:id="@+id/abouthead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Spacebound"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textSize="35sp">
    </TextView>

    <TextView
        android:id="@+id/abouttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a Java based android game"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/abouthead"
        android:layout_margin="10dp">
    </TextView>

    <TextView
        android:id="@+id/abouttxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made By: VJ017877"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/abouttxt"
        android:layout_margin="0dp">
    </TextView>

    <TextView
        android:id="@+id/abouttxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04/2020"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/abouttxt2"
        android:layout_margin="0dp">
    </TextView>


    <ImageView
        android:id="@+id/arrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back_white_24dp">
    </ImageView>

</RelativeLayout>